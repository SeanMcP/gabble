{{#owner}}
  <section class="banner">
    <form id="composeGab" action="/create" method="post">
      <textarea name="content" placeholder="What are you gabbing about?"></textarea>
      <button type="submit" name="button">Gab</button>
    </form>
  </section>
{{/owner}}

<section id="profileContainer">
  <aside id="userProfile" class="gab">
    {{#data}}
      <h3>{{name}}</h3>
      <h4>@{{username}}</h4>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
      <ul>
        <li><i class="material-icons">location_on</i> Location</li>
        <li><i class="material-icons">link</i> Website</li>
      </ul>
    {{/data}}
  </aside>

  <main id="feedContainer">
    {{#posts}}
    {{#.}}
    <article class="gab">
      <header>
        {{#data}}
        <a class="avatar" href="/{{username}}"><i class="material-icons amber">account_circle</i></a>
        <a class="username" href="/{{username}}">{{name}}</a>
        {{/data}}
      </header>
      <main>
        {{content}}
      </main>
      <footer>
        <div>
          <a class="clock-button" href="/gab/{{id}}"><i class="material-icons">schedule</i></a>
          <a href="/gab/{{id}}">{{createdAt}}</a>
        </div>
        <div>
          <a class="like-button" href="/like/{{id}}"><i class="material-icons">star_border</i></a>
          {{#data}}
            <p>{{likes.length}}</p>
          {{/data}}
        </div>
      </footer>
    </article>
    {{/.}}
    {{/posts}}
  </main>
</section>
